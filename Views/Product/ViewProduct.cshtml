@model Product
<div class="container">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <h1 class="h2 border border-secondary border-3 rounded-3"
                style="background-color: rgb(0, 0, 0); color: white">ToolChex</h1>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="btn btn-primary m-2" aria-current="page" href="/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <form asp-action="Logout" asp-controller="User" method="post">
                            <button class="btn btn-primary m-2">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

</div>
<div class="d-flex justify-content-center flex-nowrap">

    <div class="m-2 border border-primary border-3 rounded-3" style="width: 20rem;">
        <img src="@Model.ImgURL" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title text-center">@Model.Name</h5>
            <p class="card-text text-center">@Model.Description.</p>
            <div class="text-center">
                <a href="/home" class="btn btn-primary">Select Item</a>
            </div>
        </div>
    </div>
</div>