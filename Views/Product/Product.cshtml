<h1 class="text-center">Add Product</h1>
<div class="mt-4 border border-primary border-3 rounded-3 w-50 p-3 col-md-6 offset-md-3" style="background-color: rgb(218, 218, 218);">
    <form asp-action="CreateProduct" asp-controller="Product" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Product Name: </label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImgURL" class="form-label">Product ImgURL</label>
            <input asp-for="ImgURL" class="form-control" />
            <span asp-validation-for="ImgURL"></span>
        </div>
        <button type="submit" class="btn btn-primary">Add Product</button>

    </form>

</div>